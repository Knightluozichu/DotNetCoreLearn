@model Order

<h2>订单</h2>
<p>请确认订单细节，我们将会马上发货！</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <h3>收货地址</h3>
    <div class="form-group">
        <label>名字</label><input asp-for="Name" class="form-control" />
    </div>
    <h3>地址</h3>
    <div class="form-group">
        <label>地址一：</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>地址二：</label><input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>地址二：</label><input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>区(县)：</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>市：</label><input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>邮政编码：</label><input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>国家</label><input asp-for="Country" class="form-control" />
    </div>
    <h3>可选</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWrap" /> 用礼品包装这些物品
        </label>
    </div>
    <div class="text-center">
        <input type="submit" class="btn btn-primary" value="确认订单">
    </div>
</form>